# fpath=('/home/hmvege/.zsh/completion' $fpath)

# # Load bash completion functions
# autoload -Uz +X compinit && compinit
# autoload -Uz +X bashcompinit && bashcompinit


# Enabling terminal colors
export TERM=xterm-256color

{{ end -}}
